{% if sites is empty %}
 No sites at the moment.
{% else %}

    <table class="table table-hover table-bordered" style:";background-color:white;">
        <thead style="background-color:#49afcd">
        <tr>          
            <th> Site </th>
            <th> Morning</th>
            <th> Afternoon</th>
            <th> Evening</th>
            <th> Night</th>
          </tr>
         </thead> 
        {% for site, dispo  in sites %}
          <tr>  
            <th> {{ site  }} </th>            
            <th> {% if dispo[1] %} Yes {% else %} No {% endif %} </th>
            <th> {% if dispo[2] %} Yes {% else %} No {% endif %} </th>
            <th> {% if dispo[3] %} Yes {% else %} No {% endif %} </th>
            <th> {% if dispo[4] %} Yes {% else %} No {% endif %} </th>
          </tr>
        {% endfor %}
     </table>
{% endif %}