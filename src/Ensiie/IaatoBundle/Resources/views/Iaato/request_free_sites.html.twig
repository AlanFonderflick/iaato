{% extends "::layout.html.twig" %}

{% block body %}
    <h3>View the free sites </h3>

<div class="well">
    <form action="{{ path('iaato_request_free_sites') }}" method="post" {{ form_enctype(form) }}>
        {{ form_errors(form) }}
        {{ form_widget(form) }}
    <input type="submit" class="btn btn-primary" />
    </form>
</div>
{% if sites is empty %}
{% else %}
      {% include 'EnsiieIaatoBundle:Iaato:view_sites.html.twig' with {'sites': sites} %}   

{% endif %}

{% endblock %}